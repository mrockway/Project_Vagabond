<div class="container">
	<div class="row">
		<h1>Welcome <%= current_user.first_name %>!</h1>
		<!-- <h4>Current city: <%= current_user.current_city %> Â·
		Member since <%= current_user.created_at.strftime("%B %d, %Y") %></h4>
		<hr> -->
		<hr>
		<div class="col-md-4 col-offset-3">
			<p><%= image_tag current_user.image.url(:thumb) %></p>
		</div>

		<div class="options">
			
			<ul>
				<div id="list">
					<li id="post"><%= link_to "Add a new Post", new_post_path %></li>
					<li id="post"><%= link_to "Explore Cities", cities_path %></li>
					<li id="post"><%= link_to "Update Profile", edit_user_path %></li>
					<li id="post"><%= link_to "Delete Account", user_path, method: :delete, data: { confirm: 'Are you sure you want to delete your account? Your posts will also be deleted.' } %></li>
				</div>
			</ul>
		</div>

		
		<div class="posts">
			<h4><%= current_user.first_name %>'s posts</h4>
			<% current_user.posts.each do |post| %>
			<p><%= link_to post.title, post_path(post) %> - <%= post.content %></p>
		</div>
		<% end %>
		
	</div>

</div>
<h4>Current city: <%= current_user.current_city %> <br>
		Member since <%= current_user.created_at.strftime("%B %d, %Y") %></h4>
