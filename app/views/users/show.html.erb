<div class="container">
	<div class="row">
		<h1>Welcome <%= current_user.first_name %>!</h1>
		<hr>
		<div class="col-md-4 col-offset-3">
			<p><%= image_tag current_user.image.url(:thumb) %></p>
			<h4>Current city: <%= current_user.current_city %></h4>
			<h4>Member since <%= current_user.created_at.strftime("%B %d, %Y") %></h4>
		</div>

		<div class="options">
			<ul>
				<div id="list">
					<li id="post"><%= link_to "Add a new Post", new_post_path %></li>
					<li id="post"><%= link_to "Explore Cities", cities_path %></li>
					<li id="post"><%= link_to "Update Profile", edit_user_path %></li>
					<li id="post"><%= link_to "Delete Account", user_path, method: :delete, data: { confirm: 'Are you sure you want to delete your account? Your posts will also be deleted.' } %></li>
				</div>
			</ul>
		</div>
		<div class="container">
			<div class="col-md-8">
				<div class="posts" style="background-color:rgba(0, 0, 0, 0.2);">
					<br>
					<br>
										<p class="travel">My travels...</p>

					<% current_user.posts.each do |post| %>
					<p class="title"><%= link_to post.title, post_path(post) %></p><hr>  
					<p style="color:#F0F0EF;"><%= post.content %></p><br><br>
					<% end %>
				</div>
			</div>
		</div>
		
		
	</div>
</div>
